/************/
#include <stdio.h>
int main()

{
    float num1, num2, num3; 
    float sum, average, product;
    float smallest, largest;
    
    printf("Enter three different integers: "); 
    scanf("%f %f %f", &num1, &num2, &num3);
    
    sum = num1 + num2 + num3;
    printf("The sum is %.0f\n", sum);
    
    average = (num1 + num2 + num3) / 3;
    printf("The average is %.0f\n", average);
    
    product = num1 * num2 * num3;
    printf("The product is %.0f\n", product);
    
    smallest = largest = num1;
    
    if (num2 < smallest)
    {
        smallest = num2;
    }
    if (num3 < smallest)
    {
        smallest = num3;
    }
    if (num2 > largest)
    {
        largest = num2;
    }
    if (num3 > largest)
    {
        largest = num3;
    }
    printf("Smallest is %.0f\n", smallest);
    printf("Largest is %.0f\n", largest);
}
